{
    "name": "ultimate-sa/onyx-magento2",
    "type": "magento2-module",
    "description": "Onyx ERP integration Magento 2 module.",
    "version": "1.0.0",
    "license": [
        "OSL-3.0",
        "AFL-3.0"
    ],
    "authors": [{
        "name": "Yamen Ashraf",
        "email": "yamen.a.abdulrahman@hotmail.com",
        "homepage": "https://github.com/yamenarahman"
    }],
    "require": {
        "php": ">=7.0.0",
        "magento/framework": "^100.1.0|^101.0.0",
        "guzzlehttp/guzzle": "~6.0",
        "stichoza/google-translate-php": "~3.2",
        "vlucas/phpdotenv": "~2.4.0"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Ultimate\\Onyx\\": ""
        }
    },
    "scripts": {
        "post-root-package-install": [
            "cd vendor/ultimate-sa/Ultimate_Onyx/Api && php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}